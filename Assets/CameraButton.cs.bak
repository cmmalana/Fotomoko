using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using System.IO;

public class CameraButton : MonoBehaviour
{
    // Start is called before the first frame update
	public int File_Counter = 0;
	public float Timer_Val = 10;
	public Text Timer_Text;
	
	public void onButtonClick(){
		CamCapture();
	}
	
	void CamCapture()
    {
        Camera Cam = GetComponent<Camera>();
 
        RenderTexture currentRT = RenderTexture.active;
        RenderTexture.active = Cam.targetTexture;
 
        Cam.Render();
 
        Texture2D Image = new Texture2D(Cam.targetTexture.width, Cam.targetTexture.height);
        Image.ReadPixels(new Rect(0, 0, Cam.targetTexture.width, Cam.targetTexture.height), 0, 0);
        Image.Apply();
        RenderTexture.active = currentRT;
 
        var Bytes = Image.EncodeToPNG();
        Destroy(Image);
 
		// Save in Desktop
		//File.WriteAllBytes(System.Environment.GetFolderPath(System.Environment.SpecialFolder.Desktop)+"/Captures/"+ File_Counter + ".png", Bytes);
		//Debug.Log(System.Environment.GetFolderPath(System.Environment.SpecialFolder.Desktop)+"/Captures/"+ File_Counter + ".png");
		
		// Save inside the App path
        File.WriteAllBytes(Application.dataPath + "/Captures/Sample" + File_Counter + ".png", Bytes);
		Debug.Log(Application.dataPath + "/Captures/Sample" + File_Counter + ".png");
		
        File_Counter++;
    }
}
